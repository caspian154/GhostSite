{{#get "posts" filter="tags:slideshow" include="tags" order="updated_at desc" as |slides|}}
<div id="ghost-slideshow-container">
  <div id="ghost-slideshow" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      {{#foreach slides}}
      <li data-target="#ghost-slideshow" data-slide-to="{{@index}}" class="{{#if @first}} active{{/if}}"></li>
      {{/foreach}}
    </ol>
    <div class="carousel-inner" role="listbox">
      {{#foreach slides}}
        <div class="item{{#if @first}} active{{/if}}">
          
          {{#has tag="slideshow-link"}}
          <a href="{{url}}"><img src="{{image}}" alt="{{title}}" style="width: 100%"></a>
          {{else}}
          <img src="{{image}}" alt="{{title}}" style="width: 100%">
          {{/has}}
        </div>
      {{/foreach}}
    </div>
    <a class="left carousel-control" href="#ghost-slideshow" role="button" data-slide="prev">
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#ghost-slideshow" role="button" data-slide="next">
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
{{/get}}
