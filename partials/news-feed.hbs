
<h2 class="news-header"><a href="/tag/news-updates">News &amp; Updates</a></h2>

{{!-- This is the post loop - each post will be output using this markup --}}
{{#get "posts" limit="3" filter="tags:news-updates" as |articles|}}
  {{#foreach articles}}
  <div class="news-snip">
      <h4 class="news-title"><a href="{{url}}">{{title}}</a></h4>
      <section class="news-excerpt">
          <p>{{excerpt words="10"}}</p>
      </section>
      <footer class="post-meta">
          posted: {{date format="DD MMMM YYYY"}}
      </footer>
  </div>
  {{/foreach}}
{{/get}}
